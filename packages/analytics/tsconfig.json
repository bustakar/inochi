{
  "extends": "@inochi/tsconfig/base.json",
  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "rootDir": "src",
    "baseUrl": ".",
    "target": "ES2022",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "types": ["node"],
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
